<?xml version="1.0"?>
<robot name="planar_2r" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ===== Parameters ===== -->
  <xacro:property name="L1" value="0.25" />   <!-- link 1 length -->
  <xacro:property name="L2" value="0.15" />   <!-- link 2 length -->
  <xacro:property name="d1" value="0" />     <!-- offset from base -->
  <xacro:property name="d2" value="0" />     <!-- offset from joint1 -->
  <xacro:property name="m" value="0.5" />    <!-- mass of each link -->
  <xacro:property name="r" value="0.02" />   <!-- link radius -->

  <!-- ===== Base Frame ===== -->
  <link name="base_link"/>

  <joint name="base_to_fix" type="fixed">
    <parent link="base_link"/>
    <child link="fix"/>
    <origin xyz="0 0 0." rpy="1.5708 0 0"/> <!-- 90Â° sobre X -->
  </joint>

  <!-- ===== Fix Link ===== -->
  <link name="fix">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.02"/>
      </geometry>
      <material name="gray_light">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
  </link>

  <!-- ===== Link 1 ===== -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 -1.57"/>
      <geometry>
        <mesh filename="package://lukas_description/meshes/link_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray_medium">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- ===== Link 2 ===== -->
  <link name="link2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://lukas_description/meshes/link_2.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray_dark">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
  </link>

  <!-- ===== Joint 1 ===== -->
  <joint name="joint1" type="revolute">
    <parent link="fix"/>
    <child link="link1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="5" velocity="2.0"/>
  </joint>

  <!-- ===== Joint 2 ===== -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="${L1} 0 ${d2}" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="5" velocity="2.0"/>
  </joint>

</robot>
